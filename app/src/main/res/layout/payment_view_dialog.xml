<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    custom:cardCornerRadius="@dimen/general_padding_20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/general_padding_10"
        android:gravity="center"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/by_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:background="@drawable/edt_back_des"
        android:backgroundTint="@color/gray"
        android:layout_margin="@dimen/general_padding_2"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/general_padding_15">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/cash"
            android:layout_gravity="center"
            android:padding="@dimen/general_padding_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/cash"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/txt_medium"/>
    </LinearLayout>

     <LinearLayout
         android:id="@+id/by_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:background="@drawable/edt_back_des"
         android:backgroundTint="@color/gray"
        android:layout_weight="0.5"
         android:layout_margin="@dimen/general_padding_2"
         android:layout_gravity="center_vertical"
         android:padding="@dimen/general_padding_15">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/card"
            android:layout_gravity="center"
            android:padding="@dimen/general_padding_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/card"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/txt_medium"/>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>