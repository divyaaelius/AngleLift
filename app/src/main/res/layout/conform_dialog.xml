<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="-200dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/general_padding_10"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_padding_20"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/general_padding_10">


                <TextView
                    android:id="@+id/mypickloc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/general_padding_30"
                    android:gravity="center"
                    android:hint="@string/pick"
                    android:paddingLeft="@dimen/general_padding_20"
                    android:paddingRight="@dimen/general_padding_20"
                    android:text="@string/pick"
                    android:textColor="@color/white"
                   />

                <ImageView
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@color/black"
                    android:gravity="center"
                    android:padding="@dimen/general_padding_10"
                    android:src="@drawable/ic_location"
                    android:text="@string/icon_location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/driverDropLoc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/drop"
                    android:paddingLeft="@dimen/general_padding_20"
                    android:paddingRight="@dimen/general_padding_20"
                    android:text="@string/drop"
                    android:textColor="@color/white"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_padding_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/drop"
                    android:padding="@dimen/general_padding_20"
                    android:paddingLeft="@dimen/general_padding_20"
                    android:paddingRight="@dimen/general_padding_20"
                    android:text="@string/fair_estimate"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/general_padding_20"
                    android:layout_marginBottom="@dimen/general_padding_20"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="@string/drop"
                        android:padding="@dimen/general_padding_10"
                        android:text="@string/timeonly"
                        android:textColor="@color/black" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="@string/rs"
                        android:padding="@dimen/general_padding_10"
                        android:text="@string/fair_distance"
                        android:textColor="@color/black">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_dialog_conform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/general_padding_20"
                android:background="@color/black"
                android:text="@string/confirm"
                android:textColor="@color/white"
               android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/general_padding_5"
        android:src="@drawable/ic_car" />

</RelativeLayout>