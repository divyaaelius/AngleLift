<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".settings.ProfileFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/general_padding_10"
        custom:cardCornerRadius="@dimen/general_padding_10">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/general_padding_10"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/marg_tendp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/prof_profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/state_pressed_ripple"
                    android:src="@drawable/car3"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/general_padding_10"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/prof_edt_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrc"
                                    android:background="@color/transparent"
                                    android:hint="@string/name"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/imgSrc"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"
                                android:src="@drawable/user"
                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/prof_edt_mno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrc"
                                    android:background="@color/transparent"
                                    android:hint="@string/mobile"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/imgSrcPwd"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"
                                android:src="@drawable/phone"
                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/prof_edt_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrcemail"
                                    android:background="@color/transparent"
                                    android:hint="@string/email"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/imgSrcemail"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"
                                android:src="@drawable/mail"
                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <TextView
                                    android:id="@+id/prof_tv_dob_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrcdob"
                                    android:background="@color/transparent"
                                    android:hint="@string/dob"
                                    android:inputType="datetime"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/imgSrcedob"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"
                                android:src="@drawable/date"
                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>

                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marg_fivedp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/prof_edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/marg_tendp"
                            android:gravity="left"
                            android:hint="@string/address"
                            android:inputType="text"
                            android:padding="@dimen/marg_eightdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16.0sp"
                            android:textStyle="normal" />
                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:id="@+id/prof_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/marg_thirtydp"
                        android:background="@drawable/btn_yellow"
                        android:text="@string/update"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_text" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>